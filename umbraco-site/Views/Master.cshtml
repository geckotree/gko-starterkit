@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = null;

//    var settings;

    string pageScope = "s-" + CurrentPage.DocumentTypeAlias.Replace(' ','-').ToLower();
    string siteUrl = "http://" +  Request.Url.Host.ToString();
    string pageTitle = ( CurrentPage.HasValue("PageTitle") ? CurrentPage.PageTitle : CurrentPage.Name );
    string pageUrl = siteUrl + CurrentPage.Url;
    string socialImage = siteUrl + Umbraco.Media( ( CurrentPage.HasValue("SocialImage") ? CurrentPage.SocialImage : "settings.socialMediaImageDefault" ).ToString() ).Url;
}

<!doctype html>
<!--[if lte IE 9]> <html lang="en" class="no-enhance no-js lt-ie10"> <![endif]-->
<!--[if gt IE 9]><!--> <html lang="en" class="no-enhance no-js"> <!—<![endif]-->
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="description" content="">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>@pageTitle</title>
	
	<link rel="icon" href="/assets/img/brand-icons/favicon.png">

	<!-- Add to homescreen for Chrome on Android -->
	<meta name="mobile-web-app-capable" content="yes">
	<meta name="application-name" content="">
	<link rel="icon" sizes="192x192" href="/assets/img/brand-icons/chrome-touch-icon.png">

	<!-- Add to homescreen for Safari on iOS -->
	<meta name="apple-mobile-web-app-capable" content="yes">
	<meta name="apple-mobile-web-app-status-bar-style" content="black">
	<meta name="apple-mobile-web-app-title" content="">
	<link rel="apple-touch-icon" href="../assets/build/img/brand-icons/apple-touch-icon.png">

	<!-- Tile icon for Win8 (144x144 + tile color) -->
	<meta name="msapplication-TileImage" content="/assets/build/img/brand-icons/mstile.png">
	<meta name="msapplication-TileColor" content="#57B275">
	<meta name="theme-color" content="#57B275">

	@if( CurrentPage.HasValue("CanonicalLink") ) {
		<link rel="canonical" href="@CurrentPage.Canonical">
	}

	<!-- Open graph - http://ogp.me -->
	<meta property="og:title" content="@pageTitle" />
	<meta property="og:description" content="@pageUrl" />
	<meta property="og:url" content="@pageTitle" />
	<meta property="og:image" content="@socialImage" />

	<!-- Twitter card - https://dev.twitter.com/docs/cards/markup-reference -->
	<meta name="twitter:card" content="summary_large_image" />
	<meta name="twitter:title" content="@pageTitle" />
	<meta name="twitter:description" content="" />
	<meta name="twitter:url" content="@pageUrl" />
	<meta name="twitter:image" content="@socialImage" />
	<meta name="twitter:site" content="@pageTitle" />
	<meta name="twitter:creator" content="" />

	<!--[if gt IE 8]><!-->
		<link rel="stylesheet" href="/assets/build/css/style.css">
	<!--<![endif]-->

	<!--[if lt IE 9]>
		<script src="/assets/bower_components/html5shiv/dist/html5shiv.min.js"></script>
		<link rel="stylesheet" href="/assets/build/css/ie.css">
	<![endif]-->
</head>
<body class="c-page">
	@Html.Partial("Page/Header")
	<main class="c-page__content" role="main">
		@RenderBody()
	</main>
	@Html.Partial("Page/Footer")
	<script src="/assets/js/main.js"></script>
	<!-- Google Analytics: change UA-XXXXX-X to be your site's ID -->
    <script>
		(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
		(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
		m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
		})(window,document,'script','//www.google-analytics.com/analytics.js','ga');
		ga('create', 'UA-XXXXX-X', 'auto');
		ga('send', 'pageview');
    </script>
</body>
</html>
